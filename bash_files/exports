
export GREP_OPTIONS="-Rn --color=auto"

if [ -f ~/Confs/bash_files/.cfgproxy ]
then
    export http_proxy=$(cat ~/Confs/bash_files/.cfgproxy)
fi


if [ $is_cygwin ]
then
    export EDITOR=runemacs.exe
else
    export EDITOR=emacs
fi

# In order for the git gui to work on CYGWIN
if [ $is_cygwin ]
then
    export DISPLAY=:0.0
fi
